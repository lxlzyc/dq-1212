/* pages/user/index.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-style: solid;
  border-bottom-color: #f5f5f5;
  border-bottom-width: 8px;
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
  margin-top: 21px;
  border-style: solid;
  border-width: 1rpx;
  border-color: #dcdcdc;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #1d1d1d;
  font-size: 17px;
  margin-top: 12px;
  font-weight: bolder;
  margin-bottom: 34px;
}

.cell_title{
  display: flex;
  font-size: 14px;
  margin-left: 10px;
  flex: 1;
}

.badge{
  width: 7px;
  height:7px;
  background-color: #FC6169;
  margin-right: 10px;
  border-radius: 100%;
}

.line{
  display: flex;
  width:100%;
  margin-left: 10px;
  height: 1px;
  background-color: gainsboro;
}

.icon{
  display: flex;
  width:23px;
  height:23px;
  border-radius: 2px;
  margin-left: 15px;
}

.modal_mask{
  width:100%;
  height:100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal_dialog{
  position: absolute;
  top: 30%;
  overflow: hidden;
  z-index:9999;
  background: #fff;
  border-radius: 2px;
  padding: 20px 29px;
  display: flex;
  flex-direction: column;
  right: 21px;
  left: 21px;
  align-items: center;
}

.modal_title{
  font-size: 16px;
  color: #1d1d1d;
  font-weight: bolder;
}

.modal_input{
  height: 39px;
  margin-top: 6px;
  font-size: 14px;
  color: #1d1d1d;
  flex: 1;
  width: 100%;
  border-bottom-style: solid;
  border-bottom-color: #eee;
  border-bottom-width: 1rpx;
}

.btn_close{
  position:absolute;
  width: 36px;
  height: 36px;
  right: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}


.btn_code{
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  height:39px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #FC6169;
  z-index: 1000;
  /* color: #a2a2a2; */
}

.btn_code_disable{
position: absolute;
  right: 0;
  top: 0;
  display: flex;
  height:39px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  z-index: 1000;
  color: #a2a2a2; 
}

.btn_confirm{
  display: flex;
  flex:1;
  height:33px;
  width: 113px;
  border-radius: 16px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: bolder;
  background-color: #dcdcdc;
  color: white;
}

.btn_view{
  display: flex;
  flex:1;
  flex-direction: row;
  margin-top: 20px;
}