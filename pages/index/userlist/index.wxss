page{
  background-color: #ffffff;

}
.activity-form{
    width: 100%;
    padding: 20rpx 3%;

    display:flex;
  flex-direction:column;
    font-size: 32rpx;
    text-align: left;
}
.activity-form form{
  width: 94%;
}
.form-item{
   width: 100%; 
  padding: 20rpx;
  border-bottom: 1px solid #D6D5B7;  
  display: flex;
  flex-direction: row; 
}

.form-btn{
  margin: 20rpx 5%;
  width: 90%;
}
.form-btn button{
  margin-bottom: 20rpx;
  border: 1px solid #D6D5B7;  
  /* background-color: #f3f8f1 */
}
checkbox-group{
  width: 100%;
}
label{
  display: flex;
  flex-direction: row; 
  align-items:center;
  height: 80rpx;
  margin-bottom: 30rpx;
  background-color: #f3f8f1;
  /* width: 700rpx; */
  padding: 0 30rpx;
}

checkbox {
  width: 70rpx;
}
.form-users-item{
  height: 70rpx;
  margin: 5rpx 0;
  /* border:1px solid; */
  border-radius:10rpx; 
  padding: 0 30rpx 0 10 rpx;
  text-align: left;
   display: flex;
  flex-direction: row; 
    align-items:center;

}
.form-users-item text{
  font-size: 30rpx;
  margin-left: 30rpx;
  width: 200rpx;
}
.form-users-item-head{
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.form-users-item-del{
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}

