page{
  background-color: #ffffff;

}
.activity-form{
    width: 100%;
    padding: 20rpx 3%;

    display:flex;
  flex-direction:column;
    font-size: 32rpx;
    text-align: left;
}
.activity-form form{
  width: 94%;
}
.form-item{
  /* width: 100%; */
  padding: 20rpx;
  border-bottom: 1px solid #D6D5B7;  
  display: flex;
  flex-direction: row; 
}
.form-item textarea{
  padding: 3rpx 10rpx;
  width: 80%;
  height: 130rpx;
  /* border-left: 1px solid #D6D5B7;   */
}
.form-item radio{
   transform:scale(0.6);  
}
.form-item-title{
  /* float: left; */
  width: 27%;
}
.form-item-body{
  /* float: right; */
  width: 73%;
}

.form-btn{
  margin: 20rpx 5%;
  width: 90%;
}
.form-btn button{
  margin-bottom: 20rpx;
  border: 1px solid #D6D5B7;  
  /* background-color: #f3f8f1 */
}

.form-btn-ret{
    background-color: #f3f8f1;
}

.form-users-item{
  background-color: #f3f8f1;
  height: 70rpx;
  /* border:1px solid; */
  border-radius:10rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  text-align: left;
  align-items:center;
  width: 65%;
}
.form-users-item text{
  font-size: 30rpx;
  margin-left: 30rpx;
  width: 200rpx;
}
.form-users-item-head{
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx 0;
  margin-left: 10rpx;
  border-radius:2rpx;
}
.form-users-item-del{
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}

